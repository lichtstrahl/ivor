<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/msgPSTxt">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/personPhoto"
                android:layout_width="@dimen/bigIcon"
                android:layout_height="@dimen/bigIcon"
                android:layout_centerVertical="true"
                android:src="@mipmap/baseline_account_circle_black_48dp"
                android:contentDescription="@string/avatar"/>
            <TextView
                android:id="@+id/personName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/personPhoto"
                android:layout_toStartOf="@id/buttonDelete"
                android:textSize="@dimen/midleText"
                tools:text="Emma Wilson"/>
            <TextView
                android:id="@+id/personAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/personPhoto"
                android:layout_below="@id/personName"
                android:layout_toStartOf="@id/buttonDelete"
                android:textSize="@dimen/smallText"
                tools:text="23 years old"/>


            <ImageButton
                android:id="@+id/buttonDelete"
                android:layout_width="@dimen/bigIcon"
                android:layout_height="@dimen/bigIcon"
                android:layout_toStartOf="@id/buttonNo"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_delete"
                android:backgroundTint="@android:color/black"
                android:contentDescription="@string/buttonDelete"
                android:visibility="invisible"/>
            <ImageButton
                android:id="@+id/buttonYes"
                android:layout_width="@dimen/bigIcon"
                android:layout_height="@dimen/bigIcon"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@android:color/holo_green_dark"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_check_circle_yes"
                android:contentDescription="@string/buttonYes"/>

            <ImageButton
                android:id="@+id/buttonNo"
                android:layout_width="@dimen/bigIcon"
                android:layout_height="@dimen/bigIcon"
                android:layout_toStartOf="@id/buttonYes"
                android:backgroundTint="@android:color/holo_red_dark"
                android:src="@drawable/ic_check_circle_no"
                android:scaleType="centerCrop"
                android:contentDescription="@string/buttonNo"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card"
        android:layout_above="@id/input"
        android:transcriptMode="alwaysScroll"
        android:stackFromBottom="true"
        android:background="@android:color/holo_green_light"
        tools:listitem="@layout/list_msg_layout">
    </ListView>
    <EditText
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/buttonSend"
        android:layout_alignParentStart="true"
        android:inputType="text"/>
    <ImageButton
        android:id="@+id/buttonSend"
        android:layout_width="@dimen/midleIcon"
        android:layout_height="@dimen/midleIcon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/msgPSTxt"
        android:src="@drawable/send_to2"
        android:contentDescription="@string/buttonSend"/>
</RelativeLayout>